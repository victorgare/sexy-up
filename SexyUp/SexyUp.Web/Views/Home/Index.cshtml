@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        (function () {

            $(document).on("click", ".page-link", function (e) {
                e.preventDefault();

                const me = $(this);
                const hrefValue = me.attr("href");

                $("#Page").val(hrefValue);

                $("#form-search").submit();
            });
        })();
    </script>
