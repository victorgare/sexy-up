<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sexy Up!</title>

    @Styles.Render("~/Vendor/bootstrap/css")
    @Styles.Render("~/Vendor/fontawesome/css")

    @* Este css vem por ultimo, é onde esta o layout customizado *@
    @Styles.Render("~/Custom")

</head>
<body>
    <div>
        <nav class="navbar">
            <button class="btn btn-primary collapsed" type="button" data-toggle="collapse" data-target="#menu-itens" aria-controls="menu-itens" aria-expanded="false" aria-label="Menus">
                <span class="fa fa-bars"></span>
            </button>

            <div class="navbar-collapse collapse dropdown-menu bigmenu" id="menu-itens">
                <table>
                    <tbody class="text-center">
                        <tr>
                            <td class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Home")">
                                    <i class="fa fa-search"></i>
                                    <p>Buscar</p>
                                </a>
                            </td>
                            <td class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Home")">
                                    <i class="fa fa-map-marker text-danger"></i>
                                    <p>Lojas Próximas</p>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Home")">
                                    <i class="fa fa-handshake-o text-warning"></i>
                                    <p>Serviços</p>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </nav>

        <hr class="invisible" />

        <div class="col-lg-8 offset-2">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/Vendor/bootstrap/js")
    @RenderSection("scripts", false)
</body>
</html>
