@model IEnumerable<SexyUp.ApplicationCore.Entities.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <table class="table table-hover table-responsive-md text-center">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>Email</th>
                <th>Editar</th>
                <th>Bloquear</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>
                        <a href="@Url.Action("Edit", "AdminUser", new {id = item.Id})" class="btn btn-primary">
                            <i class="fa fa-edit"></i> Editar
                        </a>
                    </td>
                    <td>
                        @if (item.LockoutEndDateUtc > DateTime.Now)
                        {
                            <a href="@Url.Action("Unlock", "AdminUser", new {id = item.Id})" class="btn btn-info">
                                <i class="fa fa-unlock"></i> Desbloquear
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Lock", "AdminUser", new {id = item.Id})" class="btn btn-danger">
                                <i class="fa fa-lock"></i> Bloquear
                            </a>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<hr class="invisible" />

<div class="row pull-right">
    <a href="@Url.Action("Register", "AdminUser")" class="btn btn-primary">
        <i class="fa fa-user"></i> Cadastrar
    </a>
</div>