@model SexyUp.Web.ViewModels.AdminUser.AdminUserViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="block">
            <div class="block-header text-center">
                <h6>Novo Administrador</h6>
            </div>
            <div class="block-body">
                <hr>
                @using (Html.BeginForm("Register", "AdminUser", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    //Formulario
                    if (Model != null)
                    {
                        @Html.Partial("_Partials/_Form", Model)
                    }
                    else
                    {
                        @Html.Partial("_Partials/_Form")
                    }
                }
            </div>
        </div>
    </div>
</div>