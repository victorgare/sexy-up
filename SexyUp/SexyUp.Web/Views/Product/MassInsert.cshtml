
@{
    ViewBag.Title = "MassInsert";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("MassInsert", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="block">
                <div class="block-header text-center">
                    <h6>Cadastro em massa</h6>
                </div>
                <div class="block-body">
                    <hr>
                    <div class="row">
                        <div class="form-group col-md-8">
                            <div class="custom-file">
                                <input accept=".xlsx" type="file" class="custom-file-input" name="file" id="file">
                                <label class="custom-file-label" for="file">Escolha um arquivo</label>
                            </div>
                        </div>
                        <div class="form-group col-md-2 offset-md-1">
                            <a href="@Url.Action("DefaultWorksheet", "Product")" target="_blank" class="btn btn-secondary">
                                <i class="fa fa-file-excel-o"></i> Planilha base
                            </a>
                        </div>
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-upload"></i> Upload
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>