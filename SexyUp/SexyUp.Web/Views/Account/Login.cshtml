@using SexyUp.Web.ViewModels
@model LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<div class="row">
    <div class="col-lg-6 offset-lg-3 text-center">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="login-panel">
                    <div>
                        <img src="@Url.Content("~/Content/img/logotipo.png")" class="img-login-panel" alt="Sexy Up logo" />
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(c => c.Email, new { @class = "form-control", placeholder = "Email" })
                        @Html.ValidationMessageFor(c => c.Email, null, new { @class = "badge badge-danger pull-left" })
                    </div>
                    <hr class="invisible" />
                    <div class="form-group">
                        @Html.PasswordFor(c => c.Password, new { @class = "form-control", placeholder = "Senha" })
                        @Html.ValidationMessageFor(c => c.Password, null, new { @class = "badge badge-danger pull-left" })
                    </div>

                    <hr class="invisible" />
                    <div class="form-group">
                        <button class="btn btn-light btn-block">Entrar</button>
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
} 